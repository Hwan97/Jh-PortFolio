@charset "UTF-8";
@import url(http://fonts.googleapis.com/earlyaccess/notosanskr.css);
/*초기화*/
body,div,header,h1,h2,h3,nav,ul,article,section,hr,footer,address,p { margin:0; padding:0; }
body{ font-family:'Noto Sans KR', dotum,'돋움',AppleGothic,sans-serif;font-size:12px; overflow-y:scroll; }
.hidden { display: none; }
hr,img { border: none; }
ul { list-style-type: none; }


/*해더영역*/
div#headerWrap { border-top: 3px solid #2258ef;}
header { width:960px; height:72px; margin: 0 auto; }
header h1 { width:138px; height:18px; background: url(../images/logo.gif) no-repeat; margin-top: 27px; float: left; text-indent:-9999px; }
header h1 a { display: block; width:138px; height:18px; }
header nav { width:500px; height:30px; margin: 20px 0 0 130px; float:left; }
header nav li { float:left; margin-right:40px; font-size:15px; font-weight: 700; }
header nav li:nth-child(6) { margin-right: 0px; }
header nav a { display: block; text-decoration: none; padding: 4.8px; color: #535353; }
header nav li:nth-child(1):hover a { color: #2258ef }
header nav li:nth-child(2):hover a { color: #2258ef }
header nav li:nth-child(3):hover a { color: #2258ef }
header nav li:nth-child(4):hover a { color: #2258ef }
header nav li:nth-child(5):hover a { color: #2258ef }
header nav li:nth-child(6):hover a { color: #2258ef }
header nav li:nth-child(2) a { color: #2258ef; }

header ul.hd_right { width:90px; height:20px; margin-top: 26px; float:right; }
header ul.hd_right li { float: left; }
header ul.hd_right a { width:20px; height:20px; display: block; }
header ul.hd_right li:nth-child(1) a { color:#b2b2b2; font-size: 12px; width:20px; text-decoration: none; }
header ul.hd_right li:nth-child(1):hover a { text-decoration: underline; }
header ul.hd_right li:nth-child(2) { background: url(../images/facebook.jpg) no-repeat; float: left; margin-left: 26px; text-indent: -9999px; }
header ul.hd_right li:nth-child(3) { background: url(../images/blog.jpg) no-repeat; float: right; text-indent: -9999px; }


div#header_util { height: 45px; margin:0 auto; background: white; border-bottom: 1px solid gray;
box-shadow:0 1px 7px rgba(0,0,0,0.19);z-index:10}
div#header_util div { width: 960px; height: 45px; margin: 0 auto; }
div#header_util ul { float: left; height: 45px;  width: 600px; margin-left: 250px; }
div#header_util li { float: left; font-size: 13px; text-indent:20px; margin-top:7px; }
div#header_util li a { display: block; text-decoration: none; padding: 4.8px; color: #535353; }
div#header_util li:hover a { color: #2258ef } 
div#header_util li:nth-child(6) a { color: #2258ef; }



/*서브 네비영역*/
div.navi { width:960px; height:93px; margin: 0 auto; } 
div.navi > div#navi_contents p { padding:10px; margin-right:10px; float:left; font-size:11px; margin-top:15px; color:gray; }


/*컨텐츠영역*/
section {width:960px; margin: 0 auto; } 

section div#image{width:276px; height:114px;}
section div#image h2{width:276px; height:114px; background: url(../images/service_egloos.png) no-repeat;}
section p.txt{width:960px; margin-top:15px;font-size: 14px; color:#606060; line-height: 22px;}

section div#button{width:190px; height:36px; background:url(../images/ima_031.gif) no-repeat; margin-top:18px; background-position:12% 50%; border:1px solid #dbdbdb;}
section div#button p{width:190px; height:36px; margin:7px 38px; font-size:14px;}
section div#button a{width:100%; height:100%; display: block;text-decoration: none;color:#2c3948;font-weight: 600;}

section div#image2{width:960px; height:207px; margin:65px 0 80px 0;}
section div#image2 p.ima{width:361px; height:207px; background:url(../images/ima_071.gif) no-repeat;float:left;}
section div#image2 ul{width:599px; height:207px; float:right;}
section div#image2 li{float:left; font-size:12px; margin:0 30px 30px 0;}

section div#image2 span.liimg1{width:23px; height:22px; background:url(../images/ima_08.gif) no-repeat;float:left;}
section div#image2 span.liimg2{width:20px; height:22px; background:url(../images/ima_10.gif) no-repeat;float:left;}
section div#image2 span.liimg3{width:23px; height:23px; background:url(../images/ima_14.gif) no-repeat;float:left;}
section div#image2 span.liimg4{width:19px; height:23px; background:url(../images/ima_16.gif) no-repeat;float:left;}

section div#image2 h3{width:226px; height:30px; margin-left:35px;}
section div#image2 p.ptxt{width:230px;  margin-left:35px; color:#606060;}


/*푸터영역*/
hr { height: 1px; background: #ccc; width:960px; margin: 0 auto; }
footer { width:960px; height:97px;  margin: 0 auto; }
footer div { width:600px; height:97px; float:left; }
ul.footer_right { float:right; }
footer address { font-style: normal; font-size: 11px; color: #908f8f; padding-top: 10px; }
footer address strong { color: #686868; }
footer span { font-size: 11px; color: #bbb; padding-top: 10px; }
ul.footer_right li { float:left; padding: 0 7px; background:url(../images/footer_navi_bar.gif) no-repeat left 8px; margin-top: 10px; }
ul.footer_right li:nth-child(1) { background: none; }
ul.footer_right li a { text-decoration: none; font-size: 12px; color: #515050; font-weight: 800; }
ul.footer_right li a:hover { text-decoration: underline;}